                    img.imgshow(src='https://www.vietnamairlines.com/~/media/Images/Discovery/Vietnam/DANANG/canh%20dep/1920x1080/Danang_canhdep_chua_cau_hoi_an_1920x1080.jpg', style='width:100%;border-radius:5px')
